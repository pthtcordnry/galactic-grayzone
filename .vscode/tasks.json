{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I./imgui",
                "-I./raylib/include",
                "-I./raylib-imgui",
                "imgui/imgui_draw.cpp",
                "imgui/imgui_tables.cpp",
                "imgui/imgui_widgets.cpp",
                "imgui/imgui.cpp",
                "raylib-imgui/rlImGui.cpp",
                "memory_arena.cpp",
                "game_storage.cpp",
                "windows_file_io.cpp",
                "tile_editor.cpp",
                "editor_mode.cpp",
                "game_ui.cpp",
                "game_rendering.cpp",
                "bullet.cpp",
                "ai.cpp",
                "physics.cpp",
                "entity_helpers.cpp",
                "main.cpp",
                "-L./raylib/lib",
                "-lraylib",
                "-lstdc++",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "build/game.exe"
            ],
            "problemMatcher": "$g++",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Debug Editor Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-DDEBUG",
                "-DEDITOR_BUILD",
                "-g",
                "-O0",
                "-I./imgui",
                "-I./raylib/include",
                "-I./raylib-imgui",
                "imgui/imgui_draw.cpp",
                "imgui/imgui_tables.cpp",
                "imgui/imgui_widgets.cpp",
                "imgui/imgui.cpp",
                "raylib-imgui/rlImGui.cpp",
                "memory_arena.cpp",
                "game_storage.cpp",
                "windows_file_io.cpp",
                "tile_editor.cpp",
                "editor_mode.cpp",
                "game_ui.cpp",
                "game_rendering.cpp",
                "bullet.cpp",
                "ai.cpp",
                "physics.cpp",
                "entity_helpers.cpp",
                "main.cpp",
                "-L./raylib/lib",
                "-lraylib",
                "-lstdc++",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "build/game-editor-debug.exe"
            ],
            "problemMatcher": "$g++",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Debug Game Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-DDEBUG",
                "-g",
                "-O0",
                "-I./imgui",
                "-I./raylib/include",
                "-I./raylib-imgui",
                "imgui/imgui_draw.cpp",
                "imgui/imgui_tables.cpp",
                "imgui/imgui_widgets.cpp",
                "imgui/imgui.cpp",
                "raylib-imgui/rlImGui.cpp",
                "memory_arena.cpp",
                "game_storage.cpp",
                "windows_file_io.cpp",
                "editor_mode.cpp",
                "game_ui.cpp",
                "game_rendering.cpp",
                "bullet.cpp",
                "ai.cpp",
                "physics.cpp",
                "entity_helpers.cpp",
                "main.cpp",
                "-L./raylib/lib",
                "-lraylib",
                "-lstdc++",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "build/game-debug.exe"
            ],
            "problemMatcher": "$g++",
            "group": {
                "kind": "build"
            }
        }
    ]
}
